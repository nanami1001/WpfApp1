<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="MyTextBox" HorizontalAlignment="Left" Margin="150,56,0,0" 
                 VerticalAlignment="Top" Width="200" Height="35"/>
        <Button x:Name="MyButton" Content="Submit" HorizontalAlignment="Left" Margin="496,53,0,0" 
                VerticalAlignment="Top" Width="200" Height="40"
                FontSize="16" Click="MyButton_Click"/>
        <TextBlock x:Name="ResultTextBlock" HorizontalAlignment="Left" Margin="121,116,0,0" 
                   VerticalAlignment="Top" Width="600" Height="300" 
                   TextWrapping="Wrap" FontSize="16"/>
    </Grid>
</Window>
